<body>
    <div id="preloader"></div>
    <div class="container">
    
      <h1>Forget Password</h1>
    <p>Create a new Strong Password  </p>
      <form method="post" action="/forget-password/<%= user %>">
        <input class="signup-input" id="pass" type="password" name="pass1" placeholder="Enter Password" required>
        <input class="signup-input" id="repass" type="password" name="pass2" placeholder="Conform Password" required>
        <button type="submit">Reset Password</button>
        
        <br>
        
        <% if(typeof message !=='undefined' ){ %>
          <div class="alert-success" role="alert">
            <p style="color: rgb(100, 0, 0);">
              <%= message %>
            </p>
          </div>
          <% } %>
      </form>
      <p class="error" style="color: rgb(100, 0, 0);"></p>
    </div> 


 
<script>
  form.addEventListener('submit', (e) => {
  let message = [];
  const passwordInput = document.getElementById('pass');
  const RpasswordInput = document.getElementById('repass');
  const errorElement = document.querySelector('.error');
  const regex_password = /(?=.*[a-z])(?=.*[A-Z])(?=.*[0-9])(?=.*[^A-Za-z0-9])(?=.{8,})/gm

  if (passwordInput.value.length < 8) {
        message.push('Password must be at least 8 characters long');
      }
      
      else if(!regex_password.test(passwordInput.value.trim())){
        message.push('Use strong password');
      }

      else if (RpasswordInput.value.trim().length===0) {
        message.push('confirm password is required');
      }
      
      else if (passwordInput.value !== RpasswordInput.value.trim()) {
        message.push('Passwords do not match');
      }

  

    if (message.length > 0) {
      e.preventDefault(); 
      errorElement.innerText = message.join(', ');
    }
  });
  </script>

  

  
