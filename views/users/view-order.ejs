<%- include('../layouts/userHeader.ejs')  %>

    <div class="main-wrapper mp-pusher" id="mp-pusher">





        <!-- PAGE TITLE
================================================== -->
        <section class="page-title-section bg-img cover-background" data-background="img/bg/page-title.jpg">
            <div class="container">

                <div class="title-info">
                    <h1>Order Detailss</h1>
                </div>
                <div class="breadcrumbs-info">
                    <ul class="ps-0">
                        <li><a href="/home">Home</a></li>
                        <li><a href="#">Order Details</a></li>
                    </ul>
                </div>

            </div>
        </section>

        <!-- ACCOUNT ORDERS
================================================== -->
<div class="content-wrapper">
    <!-- Content -->

    <div class="container-xxl flex-grow-1 container-p-y">
      <br>

      <!-- Basic Bootstrap Table -->
      <span>Ordered on <%= order[0].date.toLocaleDateString() %> | </span>
      <span>
        <%= order[0].orderId %>
      </span>
      <table class="table table-bordered mb-0">
        <thead>
            <tr>
              <th>Shipping Address </th>
              <th>Payment Methods</th>
              <th>Order Summary</th>
              <th>Status</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>Name: <%= order[0].address.name %> <br>
                    Number: <%= order[0].address.number %> <br>
                    pinCode: <%= order[0].address.pincode %> <br>
                    State: <%= order[0].address.state %> <br>
                    District: <%= order[0].address.district %><br>
                    Place: <%= order[0].address.place %><br>
                    Street: <%= order[0].address.street %><br>
                    Building: <%= order[0].address.building %><br>
                </td>
                <td>
                 Type: <%= order[0].paymentType %>
                </td>
                
            
           
                <td>
                Subtotal: ₹ <%= order[0].totel %> <br>
                Shipping: free <br>
                Total: ₹ <%= order[0].totel %><br>
                  </td>
            
                  <td>
                    <%= order[0].status %>
                  </td>
            </tr>
        </tbody>
    </table>
            

    <table class="table table-bordered mb-0 mt-5">
      <thead>
          <tr>
            <th>Product Image</th>
            <th>Product name</th>
            <th>Quantity</th>
            <th>Price details</th>
           
          </tr>
      </thead>
      <tbody>
        <% order[0].product.forEach(x => { %>

          <tr>
            <td><strong>
              <img src="/products_img/<%= x.productid.productImage[0] %>" alt=""
                    style="width: 100px; height: 100px;">
              </strong></td>

              <td><strong>
                <%= x.productid.productname %>
                </strong></td>
           <td>
            <li><%= x.qty %> </li>
           </td>
                <td>
                  <ul>
                    <li><strong>price:</strong> ₹ <%= x.productid.price %> </li>
                    <li><strong>Subtotal:</strong> ₹ <%= x.singleTotel %> </li>
                    </li>
                  </ul>
                </td>
          
         
              

          <% }); %>
      </tbody>
  </table>
          

      <br>
      <% if(order[0].status == "Return Pending" || order[0].status == "Retrun"){ %>

      <% }else if( order[0].status != "Cancelled" && order[0].status != "Delivered" ){  %>
        <button class="butn-style2 dark float-end" onclick="cancelorder('<%= order[0]._id %>')">Cancel your Order</button>
      <% } else if(order[0].status == "Delivered") { %>
        <button class="butn-style2 dark float-end" onclick="returnorder('<%= order[0]._id %>')">Retrun your Order</button>
        <% } %>
      <br><br>


      <div class="content-backdrop fade"></div>
    </div>


              

    </div>


    <!-- SCROLL TO TOP
================================================== -->
    <a href="#" class="scroll-to-top"><i class="fas fa-angle-up" aria-hidden="true"></i></a>



</body>

<script>
  function returnorder(order_Id){
    Swal.fire({
            title: 'Are you sure?',
            text: "You wan't to Return this order!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'yes, delete!'
        }).then((result) => {
            if (result.isConfirmed) {
                $.ajax({
                    url: "/retrun_order",
                    data: {
                        orderId: order_Id
                    },
                    method: 'post',
                    success: (response) => {
                        $('#reloadDiv').load('/wishlist #reloadDiv')
                        console.log(response);
                        Swal.fire({
                            title: 'Success!',
                            text: 'Your order is pending return list',
                            icon: 'success',
                            showConfirmButton: false
                        })
                       
                    }

                })
            }
        })
  }

    function cancelorder(order_Id){
        Swal.fire({
            title: 'Are you sure?',
            text: "You wan't to cancel this order!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'yes, delete!'
        }).then((result) => {
            if (result.isConfirmed) {
                $.ajax({
                    url: "/cancel_order",
                    data: {
                        orderId: order_Id
                    },
                    method: 'post',
                    success: (response) => {
                        console.log("waoring")

                        $('#reloadDiv').load('/orders#reloadDiv')
                        console.log(response);
                        Swal.fire({
                            title: 'Success!',
                            text: 'Your Order Cancelled',
                            icon: 'success',
                            showConfirmButton: false
                        })
                        

                    }

                })
            }
        })
    }

</script>




